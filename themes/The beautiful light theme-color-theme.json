{
  "name": "The-theme-to-save-your-eyes", // First version
  "type": "light",
  "colors": {
    // Couleurs d'éditeur
    "editor.background": "#f7f7f7", // Blanc doux
    "editor.foreground": "#3d3d3d", // Couleur générale du texte
    "editor.selectionBackground": "#d0e0ff", // Sélection de texte
    "editor.lineHighlightBackground": "#e8e8e8", // Surlignage de ligne actuelle
    "editorCursor.foreground": "#ff0000", // Curseur rouge
    "editor.border": "#cccccc", // Bordure de l'éditeur

    // Couleurs de l'interface utilisateur
    "sideBar.background": "#fafafa", // Fond de la barre latérale
    "activityBar.background": "#e0e0e0", // Fond de la barre d'activité
    "statusBar.background": "#d0d0d0", // Fond de la barre de statut
    "button.background": "#007acc", // Boutons
    "notification.background": "#ffffff", // Notifications
    "titleBar.activeBackground": "#f3f3f3", // Barre de titre
    "badge.background": "#007acc", // Badges (ex: nombre de changements)
    "scrollbarSlider.background": "#c1c1c1", // Curseur de défilement
    "list.hoverBackground": "#f0f0f0", // Fond de liste en survol
    "dropdown.background": "#ffffff", // Fond des menus déroulants

    // Couleurs de terminal
    "terminal.background": "#f7f7f7",
    "terminal.foreground": "#3d3d3d",
    "terminalCursor.foreground": "#ff0000",

    // Couleurs de débogage
    "debugToolBar.background": "#fafafa",
    "debugIcon.startForeground": "#3d3d3d",
    "debugIcon.restartForeground": "#007acc",

    // Bordures
    "focusBorder": "#cccccc",
    "input.border": "#d4d4d4",

    // Liens et texte
    "textLink.foreground": "#007acc", // Liens hypertexte
    "textLink.activeForeground": "#005f99"
  },
  "tokenColors": [
    // Commentaires
    {
      "scope": "comment",
      "settings": {
        "foreground": "#a0a0a0",
        "fontStyle": "italic"
      }
    },
    // Mots-clés (keywords)
    {
      "scope": "keyword",
      "settings": {
        "foreground": "#d73a49"
      }
    },
    // Fonctions
    {
      "scope": "entity.name.function",
      "settings": {
        "foreground": "#6f42c1"
      }
    },
    // Variables
    {
      "scope": "variable",
      "settings": {
        "foreground": "#005cc5"
      }
    },
    // Chaînes de caractères (strings)
    {
      "scope": "string",
      "settings": {
        "foreground": "#22863a"
      }
    },
    // Nombres
    {
      "scope": "constant.numeric",
      "settings": {
        "foreground": "#e36209"
      }
    },
    // Constantes
    {
      "scope": "constant",
      "settings": {
        "foreground": "#d19a66"
      }
    },
    // Classes
    {
      "scope": "entity.name.type.class",
      "settings": {
        "foreground": "#e06c75"
      }
    },
    // Méthodes
    {
      "scope": "entity.name.function.method",
      "settings": {
        "foreground": "#61afef"
      }
    },
    // Types (ex: int, string, etc.)
    {
      "scope": "support.type",
      "settings": {
        "foreground": "#56b6c2"
      }
    },
    // Modules et packages
    {
      "scope": "support.module",
      "settings": {
        "foreground": "#d19a66"
      }
    },
    // Symboles
    {
      "scope": "punctuation",
      "settings": {
        "foreground": "#bbbbbb"
      }
    },
    // Balises (HTML)
    {
      "scope": "entity.name.tag",
      "settings": {
        "foreground": "#e36209"
      }
    },
    // Propriétés (CSS, JavaScript, etc.)
    {
      "scope": "support.type.property-name",
      "settings": {
        "foreground": "#986801"
      }
    },
    // Valeurs (CSS, JavaScript, etc.)
    {
      "scope": "support.constant.property-value",
      "settings": {
        "foreground": "#50a14f"
      }
    },
    // Attributs (HTML)
    {
      "scope": "entity.other.attribute-name",
      "settings": {
        "foreground": "#b57614"
      }
    },
    // Sélecteurs (CSS)
    {
      "scope": "meta.selector",
      "settings": {
        "foreground": "#4078f2"
      }
    },
    // Pseudo-classes (CSS)
    {
      "scope": "entity.other.attribute-name.pseudo-class",
      "settings": {
        "foreground": "#e06c75"
      }
    },
    // Pseudo-éléments (CSS)
    {
      "scope": "entity.other.attribute-name.pseudo-element",
      "settings": {
        "foreground": "#e06c75"
      }
    },
    // Règles CSS
    {
      "scope": "meta.rule",
      "settings": {
        "foreground": "#4078f2"
      }
    },
    // Directives (ex: import, export)
    {
      "scope": "meta.import",
      "settings": {
        "foreground": "#d73a49"
      }
    },
    // Déclarations
    {
      "scope": "meta.declaration",
      "settings": {
        "foreground": "#4078f2"
      }
    },
    {
      "scope": "variable.other.readwrite",
      "settings": {
        "foreground": "#4caf50" // Exemple : Vert
      }
    },
    {
      "scope": "meta.function-call",
      "settings": {
        "foreground": "#ff9800" // Exemple : Orange
      }
    },
    {
      "scope": "meta.function-call meta.function-call",
      "settings": {
        "foreground": "#8e44ad" // Exemple : Violet foncé
      }
    },
    {
      "scope": "variable.parameter",
      "settings": {
        "foreground": "#03a9f4" // Exemple : Bleu clair
      }
    }
  ]
}
